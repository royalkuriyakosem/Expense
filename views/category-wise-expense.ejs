<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Wise Expenses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Category Wise Expenses</h1>
        <div class="d-flex justify-content-between mb-4">
            <a href="/" class="btn btn-outline-light me-2">Home</a>
            <a href="/logout" class="btn btn-outline-light me-2">Logout</a>
            <a href="/add-expense" class="btn btn-primary">Add New Expense</a>
        </div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Total Expense</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= expense.category %></td>
                        <td>Rs <%= parseFloat(expense.total_expense).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <% if (expenses.length === 0) { %>
            <div class="alert alert-warning" role="alert">
                No expenses recorded in any category.
            </div>
        <% } %>
    </div>
</body>
</html>
