<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Income by Source</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Income by Source</h1>
        <div class="d-flex justify-content-between mb-4">
            <a href="/" class="btn btn-outline-light me-2">Home</a>
            <a href="/logout" class="btn btn-outline-light me-2">Logout</a>
            <a href="/add-income" class="btn btn-primary">Add New Income</a>
        </div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Source</th>
                    <th>Total Income</th>
                </tr>
            </thead>
            <tbody>
                <% incomeSources.forEach(income => { %>
                    <tr>
                        <td><%= income.source %></td>
                        <td>Rs <%= parseFloat(income.total_income).toFixed(2) %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <% if (incomeSources.length === 0) { %>
            <div class="alert alert-warning" role="alert">
                No income recorded from any source.
            </div>
        <% } %>
    </div>
</body>
</html>
