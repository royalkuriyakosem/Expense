<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Expenses</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Your Expenses</h1>
        <div class="d-flex justify-content-end mb-4">
            <a href="/logout" class="btn btn-outline-light me-2">Logout</a>
            <a href="/add-expense" class="btn btn-primary">Add New Expense</a>
        </div>
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Amount</th>
                    <th>Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% expenses.forEach(expense => { %>
                    <tr>
                        <td><%= expense.category %></td>
                        <td>Rs <%= parseFloat(expense.amount).toFixed(2) %></td>
                        <td><%= new Date(expense.date).toLocaleDateString() %></td>
                        <td>
                            <form action="/delete-expense/<%= expense.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
